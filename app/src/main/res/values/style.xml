<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainMenuButton">
        <item name="android:elevation" >20dp</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@color/MainElementWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="MainMenuButtonInDevelop">
        <item name="android:elevation" >20dp</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@color/Disabled</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="BaseText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TitleText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

<style name="btnMaterialMark">
    <item name="android:layout_width">170dp</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="backgroundTint">@android:color/transparent</item>
    <item name="android:drawableEnd">@android:drawable/arrow_down_float</item>
    <item name="fontFamily">@font/unbounded</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/MainElementWhite</item>
    <item name="android:textSize">14sp</item>

</style>


    <style name="btnCalculate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/ic_element_primary</item>
        <item name="android:elevation">20dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:text">@string/calculate</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>






    <style name="Density">
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:text">@string/density</item>
    </style>


    <style name="Hint">
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal|numberSigned </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:hint">@string/density</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
    </style>

    <style name="Unit">
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:text">@string/gsm3</item>

    </style>

   <style name="ElementHeaderText">
       <item name="android:textColor">@color/MainElementWhite</item>
       <item name="android:background">@android:color/transparent</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginStart">10dp</item>
       <item name="android:layout_marginTop">5dp</item>
       <item name="fontFamily">@font/unbounded</item>
   </style>



    <style name="SelectFormImage">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SelectFormLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SelectFormCardText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


<style name="MainHeader">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/unbounded</item>
    <item name="android:textSize">20sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
</style>


    <style name="btnSwitchMethod">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>




    <style name="AppAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>




    <style name="LanguageDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>