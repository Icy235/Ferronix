<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainMenuButton">
        <item name="android:elevation" >20sp</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@color/MainElementWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">74sp</item>
        <item name="android:layout_width">294sp</item>
        <item name="icon">@drawable/ic_list</item>
        <item name="android:hapticFeedbackEnabled">true</item>

    </style>


    <style name="HistoryBtn">
        <item name="android:elevation" >20sp</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:layout_height">53sp</item>
        <item name="android:layout_width">294sp</item>
        <item name="icon">@drawable/ic_history</item>
    </style>


    <style name="BaseText">
<item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

<style name="btnMaterialMark">

    <item name="android:layout_width">170sp</item>
    <item name="android:layout_height">56sp</item>
    <item name="android:layout_marginTop">10sp</item>
    <item name="backgroundTint">@android:color/transparent</item>
    <item name="android:drawableEnd">@android:drawable/arrow_down_float</item>
    <item name="fontFamily">@font/unbounded</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/MainElementWhite</item>
    <item name="android:textSize">14sp</item>

</style>


    <style name="btnCalculate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/ic_element_primary</item>
        <item name="android:elevation">20dp</item>
        <item name="android:paddingStart">40sp</item>
        <item name="android:paddingEnd">40sp</item>
        <item name="android:text">@string/calculate</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:hapticFeedbackEnabled">true</item>

    </style>






    <style name="Density">
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:text">@string/density</item>
    </style>


    <style name="editTextDensity">
<item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal|numberSigned </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:hint">@string/density</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
    </style>

    <style name="Unit">
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="fontFamily">@font/unbounded</item>
        <item name="android:text">@string/gsm3</item>

    </style>

   <style name="ElementHeaderText">
       <item name="android:textColor">@color/MainElementWhite</item>
       <item name="android:background">@android:color/transparent</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginStart">10sp</item>
       <item name="android:layout_marginTop">5sp</item>
       <item name="fontFamily">@font/unbounded</item>
   </style>



    <style name="SelectFormImage">
        <item name="android:layout_width">115sp</item>
        <item name="android:layout_height">115sp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SelectFormLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="SelectFormCardText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/unbounded</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/MainElementWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>




</resources>