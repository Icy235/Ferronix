<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CirclePipeCalculateLength">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBackCirclePipeL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:onClick="btnBack"
            android:backgroundTint="@color/orange"
            android:contentDescription="@string/back"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
        <!--@TODO: Изменить изображение-->
        <ImageButton
            android:id="@+id/imageButtonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:contentDescription="@string/save"
            android:padding="15sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/btnBackCirclePipeL"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_download"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/circle"
            app:layout_constraintStart_toStartOf="@+id/btnBackCirclePipeL"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_circlepipe" />

        <TextView
            android:id="@+id/textViewLengthTotalCirclePipeL"
            style="@style/BaseText"
            android:layout_width="200sp"
            android:layout_height="150sp"
            android:text="@string/length"
            android:gravity="center"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.504" />


        <Button
            android:id="@+id/btnMaterialCirclePipeL"
            android:layout_width="335sp"
            android:layout_height="56sp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:elevation="20sp"
            android:fontFamily="@font/unbounded"
            android:gravity="start"
            android:text="@string/material"
            android:textColor="@color/MainElementWhite"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="@+id/btnMaterialCirclePipeL"
            app:layout_constraintStart_toStartOf="@+id/btnMaterialCirclePipeL"
            app:layout_constraintTop_toBottomOf="@+id/btnMaterialCirclePipeL"
            app:srcCompat="@drawable/line_3" />

        <Button
            android:id="@+id/btnMarkCirclePipeL"
            android:layout_width="335sp"
            android:layout_height="56sp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@android:color/transparent"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:elevation="20sp"
            android:fontFamily="@font/unbounded"
            android:gravity="start"
            android:text="@string/mark"
            android:textColor="@color/MainElementWhite"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/btnMaterialCirclePipeL"
            app:layout_constraintStart_toStartOf="@+id/btnMaterialCirclePipeL"
            app:layout_constraintTop_toBottomOf="@+id/btnMaterialCirclePipeL" />

        <ImageView
            android:id="@+id/imageLineMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="@+id/btnMarkCirclePipeL"
            app:layout_constraintStart_toStartOf="@+id/btnMarkCirclePipeL"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkCirclePipeL"
            app:srcCompat="@drawable/line_3" />

        <FrameLayout
            android:id="@+id/linearLayout"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_element_primary"
            app:layout_constraintStart_toStartOf="@+id/btnMarkCirclePipeL"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkCirclePipeL">

            <!-- LinearLayout для вертикального расположения элементов -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <!-- Текст "Плотность" -->
                <TextView
                    android:id="@+id/textViewDensityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/density"
                    android:fontFamily="@font/unbounded"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp" />

                <!-- Горизонтальный контейнер для EditText и текста "кг/м³" -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">
                    <!-- Поле ввода плотности -->

                    <!-- Текст "кг/м³" -->
                    <EditText
                        android:id="@+id/editTextDensityCirclePipeL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/unbounded"
                        android:hint="@string/density"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal|numberSigned" />

                    <TextView
                        android:id="@+id/textViewUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gsm3"
                        android:fontFamily="@font/unbounded"
                        android:layout_marginStart="10dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            style="@style/BaseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/calculateWeight"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/BaseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="btnGoLength"
            android:text="@string/calculateLeght"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"

            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/lineralLayoutLenght"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_element_primary"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/chip2"
            app:layout_constraintStart_toStartOf="@+id/chip"
            app:layout_constraintTop_toBottomOf="@+id/chip">

            <!-- Текст "Длина" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/unbounded"
                android:text="@string/mass" />

            <!-- Горизонтальный контейнер для EditText и текста "мм" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <!-- Поле ввода длины -->
                <EditText
                    android:id="@+id/editTextMassCirclePipeL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="no"
                    android:fontFamily="@font/unbounded"
                    android:hint="@string/length"
                    android:inputType="numberDecimal|numberSigned" />

                <!-- Текст "мм" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/unbounded"
                    android:text="@string/kg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineralLayoutSquareA"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_element_primary"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/lineralLayoutLenght"
            app:layout_constraintStart_toStartOf="@+id/lineralLayoutLenght"
            app:layout_constraintTop_toBottomOf="@+id/lineralLayoutLenght">

            <!-- Текст "Площадь" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/unbounded"
                android:text="@string/Diametr" />

            <!-- Горизонтальный контейнер для EditText и текста "мм²" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <!-- Поле ввода площади -->
                <EditText
                    android:id="@+id/editTextDiametrCirclePipeL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/unbounded"
                    android:hint="@string/Diametr"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal|numberSigned" />

                <!-- Текст "мм²" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/millimetre"
                    android:fontFamily="@font/unbounded"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineralLayoutWall"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_element_primary"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/lineralLayoutSquareA"
            app:layout_constraintStart_toStartOf="@+id/lineralLayoutSquareA"
            app:layout_constraintTop_toBottomOf="@+id/lineralLayoutSquareA">

            <!-- Текст "Площадь" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/unbounded"
                android:text="@string/wall" />

            <!-- Горизонтальный контейнер для EditText и текста "мм²" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <!-- Поле ввода площади -->
                <EditText
                    android:id="@+id/editTextWallCirclePipeL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/unbounded"
                    android:hint="@string/wall"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal|numberSigned" />

                <!-- Текст "мм²" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/millimetre"
                    android:fontFamily="@font/unbounded"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </LinearLayout>


        <Button
            style="@style/BaseText"
            android:id="@+id/btnCalculateCirclePipeL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_element_primary"
            android:onClick="btnCalculateSquare"
            android:elevation="15sp"
            android:paddingStart="40sp"
            android:paddingEnd="40sp"
            android:text="@string/calculate"
            app:icon="@drawable/ic_enter"
            app:iconPadding="10sp"
            app:iconTint="@color/MainElementWhite"

            app:layout_constraintEnd_toEndOf="@+id/lineralLayoutWall"
            app:layout_constraintStart_toStartOf="@+id/lineralLayoutWall"
            app:layout_constraintTop_toBottomOf="@+id/lineralLayoutWall" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>